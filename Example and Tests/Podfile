source 'https://github.com/CocoaPods/Specs.git'

use_frameworks!

# Core Libraries
def core()
  pod 'Moya-Gloss', :path => '../'
  pod 'Moya-Gloss/RxSwift', :path => '../'
  pod 'Moya-Gloss/ReactiveCocoa', :path => '../'
  pod 'Gloss', '~> 1.0'
  pod 'Alamofire', '~> 4.0.0'
  pod 'Moya', '8.0.0-beta.4'
  pod 'RxSwift', '3.0.1'
  pod 'RxCocoa', '3.0.1'
  pod 'ReactiveSwift', '1.0.0-alpha.3'
end

# Testing Libraries
def testing()
  pod 'Quick'
  pod 'Nimble'
end

target 'Demo' do
  platform :ios, '9.0'
  core
end

target 'Tests' do
  platform :ios, '9.0'
  core
  testing
end
